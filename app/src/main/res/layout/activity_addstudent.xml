<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Addstudent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/sky_dark_blue">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/backarrow_imageview11"
            android:layout_marginLeft="15dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Student Detail"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="19dp" />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_weight="1">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
        android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="15dp"
            android:paddingLeft="5dp"
            android:id="@+id/edittext_firstName"
            android:background="@drawable/edittext_shaperoomdatabase"
            android:hint="First Name"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Last Name"
            android:layout_marginVertical="15dp"
            android:paddingLeft="5dp"
         android:layout_marginEnd="14dp"
            android:id="@+id/edittext_lastname"
            android:background="@drawable/edittext_shaperoomdatabase"

            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_weight="1">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="15dp"
            android:paddingLeft="5dp"
            android:background="@drawable/edittext_shaperoomdatabase"
            android:hint="Father Name"
            android:id="@+id/edittext_fathername"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Mother Name"
            android:layout_marginVertical="15dp"
            android:paddingLeft="5dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/edittext_shaperoomdatabase"
android:id="@+id/edittext_mothername"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_weight="1">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="15dp"
            android:paddingLeft="5dp"
            android:background="@drawable/edittext_shaperoomdatabase"
            android:hint="Address"
            android:id="@+id/edittext_address"

            android:layout_weight="1"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Mobile No"
            android:inputType="number"
            android:layout_marginVertical="15dp"
            android:paddingLeft="5dp"
            android:maxLength="10"
            android:layout_marginEnd="14dp"
            android:id="@+id/edittext_moblieno"
            android:background="@drawable/edittext_shaperoomdatabase"

            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"

        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="14dp"
            android:layout_marginVertical="15dp"
          android:id="@+id/date_textview"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:background="@drawable/edittext_shaperoomdatabase"
         android:hint="D.O.B"

            android:layout_weight="0.8"/>

<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1.2"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
               android:layout_marginVertical="15dp"
android:layout_marginEnd="10dp"
        android:layout_marginStart="4dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/edittext_shaperoomdatabase"
        android:id="@+id/radiogroup"
        android:orientation="horizontal">
        <RadioButton
            android:layout_weight="1"
            android:layout_width="0dp"
           android:layout_height="wrap_content"
            android:id="@+id/radio_male"
            android:text="Male"/>
        <RadioButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/radio_female"
            android:layout_height="wrap_content"
            android:text="Female"/>

    </RadioGroup>
</LinearLayout>

    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="2"
    android:layout_gravity="center"

    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"

        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_shaperoomdatabase"
            android:layout_margin="14dp">
        <Spinner
            android:layout_width="match_parent"
           android:id="@+id/spinner"
            android:layout_height="match_parent"
           ></Spinner>
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_weight="1">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/choose_image"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/shape_generate_button"
        android:textColor="@color/white"
        android:text="Choose Image"/>


</LinearLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center"
    android:layout_weight="2">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/male"
        android:id="@+id/gallary_imageview"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"

        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add STudent"
            android:textColor="@color/white"
            android:id="@+id/mybutton_add"
            android:background="@drawable/buttonbackground"
            android:layout_marginHorizontal="15dp"/>

    </LinearLayout>

</LinearLayout>

</LinearLayout>